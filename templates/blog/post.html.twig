{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <p>
            {{ post.title }}
            {{ post.text }}
            {{ 560 | price }}
        </p>
        This friendly message is coming from:
        here is locale {{ locale }}
        {{ message }}
        {{ app.environment }}
        {{ app.user }}
        {{ app.request }}
    </div>
{% endblock %}
